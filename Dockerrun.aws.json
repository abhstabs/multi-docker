{
    "AWSEBDockerrunVersion" : "2",
    "containerDefinitions" : [
        {
            "name" : "client",
            "image" : "abhinavraj984/multi-client",
            "hostname" : "client",
            "essential" : false 
        },
        {
            "name" : "server",
            "image" : "abhinavraj984/multi-server",
            "hostname" : "api",
            "essential" : false
        },
        {
            "name" : "worker",
            "image" : "abhinavraj984/multi-worker",
            "hostname" : "worker",
            "essential" : false
        },
        {
            "name" : "nginx",
            "image" : "abhinavraj984/multi-nginx",
            "hostname" : "nginx",
            "essential" : true,
            "portMappings" : [
                {
                    "hostPort" : 80,
                    "containerPort" : 80
                }
            ],
            "links" : ["client", "server"]
        }
    ]
}